{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>

        <div class="header">

            <div class="container">

                <div class="row">

                    <article class="span12">

                        {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}

                    </article>

                </div>

            </div>

        </div>

    </header>

    <!--navigation-->
    <section class="nav">

        <div class="container">

            <div class="row">

                <article class="span12">

                    {{widget('navigation', 'navigation', {'align': 'left'})|raw}}

                </article>

            </div>
            
        </div>

    </section>

    <!--content-->
    <div class="global">

        <div class="container">

            <div class="row">

                <article class="span12">

                    {{zone('main')|raw}}
                    
                    {{widget('space', 'space', {'height': '30'})|raw}}

                </article>

            </div>

        </div>

    </div>

    <!--footer-->
    <footer>

        <div class="container">

            <div class="row">

                <section class="span12">

                    <div class="row">

                        {{widget('space', 'space', {'height': '40'})|raw}}

                        <article class="span4">

                            {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}

                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                        <article class="span4">

                            {{widget('logo', 'footer-logo', {"defaultlogo": asset('images/footer-logo.png')})|raw}}

                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                        <article class="span4">

                            {{widget('profile', 'copyright', { 'profileType':'copyright' })|raw}}

                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>

                    </div>

                </section>

            </div>

        </div>

    </footer>
    
</div>

{% endblock %}